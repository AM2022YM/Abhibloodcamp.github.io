//-File Name : contact.pug
extends base.pug
block style
            style 
                include ../static/contact.css
                include ../static/style.css
            script 
                include ../static/contact.js
block content
    .container1
        h1 Contact For Any Problem
        form(action="/contact" method="post" class="myinput") 
            input(type="name" pattern="[a-zA-Z][a-zA-Z ]{2,}" placeholder="Enter Your Name" name="name" required/)
            input(type="text" placeholder="Enter Your Place" name="place" required/)
            input(type="phone" id="phn" placeholder="Enter Your Phone Number" name="phone" required/)
            input(type="email" placeholder="Enter Your E-mail" name="email" required/)
            button(class="btn" onclick="verify()") Submit
